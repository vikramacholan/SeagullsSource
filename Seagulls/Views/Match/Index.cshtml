@model IEnumerable<Seagulls.Match>

@{
    ViewBag.Title = "Seagulls Home";
}

<h2>Matches</h2>

<p>
    @if (User.Identity.IsAuthenticated) { 
    @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MatchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opponent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpponentScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaptainId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WicketKeeperId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoreSheetUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.League.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venu.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MatchDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opponent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpponentScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player1.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScoreSheetUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.League.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venu.Description)
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated) {
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
            @Html.ActionLink("Details", "Details", new { id=item.Id })
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            @Html.ActionLink("Update Score", "Index","Score", new { matchId = item.Id }, null)
                  }
                  else
{
            @Html.ActionLink("View Score", "Index","Score", new { matchId = item.Id }, null)

}
                </td>
            </tr>
        }
    </tbody>
</table>
